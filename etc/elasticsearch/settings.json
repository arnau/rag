{
  "settings" : {
    "analysis": {
      "filter": {
        "en_snow": {
          "type": "snowball",
          "language": "English"
        },
        "en_stop": {
          "type": "stop",
          "ignore_case" : "true",
          "stopwords": ["_english_"]
        }
      },
      "analyzer": {
        "default": {
          "type": "snowball"
        },
        "eng": {
          "tokenizer": "standard",
          "filter": ["standard", "lowercase", "en_stop", "en_snow"],
          "char_filter" : ["html_strip"]
        }
      }
    }
  },
  "bookmarks": {
    "_analyzer": {
      "path": "language"
    },
    "properties": {
      "@id": {
        "type": "string",
        "index": "no"
      },
      "@type": {
        "type": "string",
        "index_name": "type",
        "store": "yes",
        "index": "not_analyzed"
      },
      "identifier": {
        "type": "string",
        "index": "no"
      },
      "language": {
        "type": "string",
        "store": "yes",
        "index": "not_analyzed"
      },
      "created": {
        "type": "date"
      },
      "reference": {
        "type": "string",
        "store": "yes",
        "index": "not_analyzed"
      },
      "source": {
        "type": "string",
        "store": "yes",
        "index": "not_analyzed"
      },
      "keyword": {
        "type": "string"
      }
    }
  }
}
}
