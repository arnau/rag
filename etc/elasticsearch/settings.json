{
  "settings": {
    "analysis": {
      "filter": {
        "en_snow": {
          "type": "snowball",
          "language": "English"
        },
        "en_stop": {
          "type": "stop",
          "ignore_case": "true",
          "stopwords": ["_english_"]
        }
      },
      "analyzer": {
        "default": {
          "type": "snowball",
          "tokenizer": "letter",
          "filter": ["standard", "lowercase", "asciifolding"],
          "char_filter" : ["html_strip"]
        },
        "en": {
          "type": "snowball",
          "tokenizer": "letter",
          "filter": ["standard", "lowercase", "asciifolding", "en_stop", "en_snow"],
          "char_filter" : ["html_strip"]
        }
      },
      "tokenizer": {
        "url_tokenizer": {
         "type": "uax_url_email"
        },
        "ngram_tokenizer": {
          "type": "nGram",
          "min_gram": "1",
          "max_gram": "50"
        }
      }
    }
  },
  "mappings": {
    "topics": {
      "properties": {
        "@context": {
          "type": "string",
          "index": "no"
        },
        "@id": {
          "type": "string",
          "index": "no"
        },
        "@type": {
          "type": "string",
          "index": "not_analyzed"
        },
        "label": {
          "type": "string",
          "analyzer": "en"
        },
        "definition": {
          "type": "string",
          "analyzer": "en"
        }
      }
    },
    "bookmarks": {
      "_parent": { "type": "topics" },
      "_analyzer": {
        "path": "language"
      },
      "properties": {
        "@context": {
          "type": "string",
          "index": "no"
        },
        "@id": {
          "type": "string",
          "index": "no"
        },
        "@type": {
          "type": "string",
          "index_name": "type",
          "index": "not_analyzed"
        },
        "identifier": {
          "type": "string",
          "index": "no"
        },
        "language": {
          "type": "string",
          "index": "not_analyzed"
        },
        "created": {
          "type": "date"
        },
        "reference": {
          "type": "string",
          "analyzer": "stop"
        },
        "source": {
          "type": "string",
          "analyzer": "stop"
        },
        "tag": {
          "type": "string"
        }
      }
    }
  }
}
